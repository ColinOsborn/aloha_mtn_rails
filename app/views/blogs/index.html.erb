<div class="row">
    <h1 class="text-center">Blog</h1>
    <br>
  <% if @blogs.empty? %>
    <h1 id="no-posts">No Blog Posts Created</h1>
<% else %>
    <% @blogs.each do |blog| %>
    <div class="well well-lg">
        <div class="blog-title">
            <%= link_to blog.title, blog_path(blog) %>
        </div>
      <div class="blog-body">
        <%= truncate(blog.body, length: 500) %>
      </div>
    </div>
    <% end %>
<% end %>
    <%= link_to "New Blog Post", new_blog_path, class: 'btn btn-primary btn-lg' %>
</div>