<p id="notice"><%= notice %></p>

<div class="conatainer">
  <h1 class="center-text">Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
      <th>Password confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>
<div class="container">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.password_confirmation %></td>
        <br>
        <td><%= link_to 'Show', user, class: 'btn btn-primary btn-lg pull-right' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-lg pull-right' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-lg pull-right' %></td>
      </tr>
    <% end %>
  </tbody>

  <br>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary btn-lg' %>
</div>